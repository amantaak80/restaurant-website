<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border">
                <header class="card-header">
                    <h4 class="card-title text-center mt-2">Sign up</h4>
                </header>
                <article class="card-body">
                    <form action="/register" method="POST">
                        <% if(messages.error){%>
                            <!--we recieve message object in our flash-->
                            <span id="dangerText">
                                <%= messages.error%>
                            </span>
                            <%}%>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Full name </label>
                                        <input value="<%= messages.name%>" name="name" type="text" class="form-control"
                                            placeholder="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Email address</label>
                                    <input value="<%= messages.email%>" name="email" type="email" class="form-control"
                                        placeholder="">
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Area</label>
                                        <input value="<%= messages.address%>" name="address" type="text"
                                            class="form-control">
                                        <!--address-->
                                    </div>
                                    <div class="form-group col-md-6 my-2">
                                        <label>City</label>
                                        <select value="<%= messages.city%>" name="city" id="inputState"
                                            class="form-control">
                                            <option> Chandigarh</option>
                                            <option>Mohali</option>
                                            <option>Panchkula</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Create password</label>
                                    <input name="password" class="form-control" type="password">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-warning btn-block my-3"> Register </button>
                                </div>
                                <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept
                                    our
                                    <br>
                                    Terms of use and Privacy Policy.</small>
                    </form>
                </article>
                <div class="border-top card-body text-center">Have an account? <a href="/login"
                        class="btn-danger btn">Log
                        In</a>
                </div>
            </div>
        </div>

    </div>


</div>