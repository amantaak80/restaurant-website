<section class="mainSection">
  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-md-4 mx-auto my-auto">
        <p>Are you hungry?</p>
        <br>
        <h1 style="font-size: 60px; font-weight: bold;">Don't Wait</h1>
        <br>
        <button class="btn btn-warning" type="submit">Order Now</button>
      </div>

      <div class="col-md-4 mx-auto my-auto">
        <a class="d-none d-lg-block" href=""><img style="width: 10lh;" src="/img/pizza.png" alt=""></a>
      </div>
    </div>

  </div>
</section>

<section class="menu text-center">
  <h1 class="text-center">Our Menu</h1>
  <div class="container-fluid w-100">
    <div class="row">

      <% data.forEach(function(data){ %>
        <div class="card col-sm-3">
          <img class="w-50 py-2 mx-auto my-auto" src="/img/<%=data.image%>" alt="">
          <h4>
            <%=data.name%>
          </h4>
          <p>
            <%=data.size%>
          </p>
          <div class="container-fluid row">
            <div class="col-md-6">
              <h4 class="my-3">Rs
                <%=data.price%>
              </h4>
            </div>
            <div class="col-md-6">
              <button data-pizza="<%=JSON.stringify(data)%>" class="add-to-cart btn btn-warning w-100 my-2"
                type="submit">+ Add</button>
            </div>
          </div>
        </div>
        <% })%>


    </div>
  </div>
</section>